        </select>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Nome</td>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>


<script>
    $(document).ready(function () {

        $('#listadaDeAlunos').html("");

        $.getJSON("/Aluno/Listar", null, function (data) {

            $.each(data.Result, function (index, aluno) {

                $('#listadaDeAlunos').append("<option value='" + aluno.Id + "'>" + category.Nome + "</option>");
            });
        })
    });
</script>