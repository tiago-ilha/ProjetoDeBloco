
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Login.cshtml";
}

<div class="login-form">
    <form method="post" action="" role="login">
        <h3>@ViewBag.titulo</h3>
        
        <div class="row">
            <div class="col-xs-12">
                <input type="email" id="login" placeholder="Login" class="form-control input-lg" />
                <span class="glyphicon glyphicon-user"></span>
                <span id="validarLogin"></span>
            </div>
            <div class="col-xs-12">
                <input type="password" id="senha" placeholder="Senha" class="form-control input-lg" />                
                <span class="glyphicon glyphicon-lock"></span>
                <span id="validarSenha"></span>
            </div>
        </div>
        <button type="button" id="Logar" class="btn btn-lg btn-block btn-success">Entrar</button>
    </form>
</div>