@model IEnumerable<ProjetoDeBloco.Aplicacao.ViewModels.AdministradorVM>

@{
    ViewBag.Title = "Lista de Coordenadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Novo coordenador", "Cadastrar", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            Login Usuário
        </th>
        <th>
            Situação
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Situacao)
            </td>
            <td>
                <a href="@Url.Action("Editar", "Administrador", new { id = item.Id })"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("Visualizar", "Administrador", new { id = item.Id })"><i class="glyphicon glyphicon-file"></i></a>
                @if (item.Usuario.Situacao != ProjetoDeBloco.Dominio.Enum.SituacaoUsuario.Inativo && item.Usuario.Situacao != ProjetoDeBloco.Dominio.Enum.SituacaoUsuario.Ativo)
                {
                    <a href="@Url.Action("Deletar", "Administrador", new { id = item.Id })"><i class="glyphicon glyphicon-trash"></i></a>
                }
                @if (item.Usuario.Situacao != ProjetoDeBloco.Dominio.Enum.SituacaoUsuario.Inativo && item.Usuario.Situacao != ProjetoDeBloco.Dominio.Enum.SituacaoUsuario.Ativo)
                {
                    <a href="@Url.Action("AtivarCoordenador","Administrador", new { id = item.Id })"><i class="glyphicon glyphicon-ok"></i></a>
                }
            </td>

        </tr>
    }

</table>

