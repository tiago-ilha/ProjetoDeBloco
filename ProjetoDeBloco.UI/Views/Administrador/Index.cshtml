@model PagedList.IPagedList<projetodebloco.aplicacao.viewmodels.administradorvm>
	@using PagedList.Mvc;

	@{
		ViewBag.Title = "Lista de Coordenadores";
		Layout = "~/Views/Shared/_Layout.cshtml";
	}

	<link rel="stylesheet" href="@Url.Content("~/Content/PagedList.css")" />

	<h2>@ViewBag.Title</h2>

	<p>
		@Html.ActionLink("Novo Coordenador", "Cadastrar", "", new { @class = "btn btn-primary" })
	</p>
	<div class="col-lg-12">
		<table class="table">
			<tr>
				<th>
					@Html.DisplayName("Matricula")
				</th>
				<th>
					@Html.DisplayName("Nome")
				</th>
				<th>
					@Html.DisplayName("E-mail")
				</th>
				<th>
					@Html.DisplayName("Data de Nascimento")
				</th>			
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Matricula)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimento)
					</td>
				
					<td>
						@Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
						@Html.ActionLink("Visualizar", "Visualizar", new { id = item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.Id })
					</td>
				</tr>
			}

		</table>
	</div>
	Página @Model.PageNumber de @Model.PageCount
	@Html.PagedListPager(Model, page => Url.Action("Index", new { pagina = page }))
