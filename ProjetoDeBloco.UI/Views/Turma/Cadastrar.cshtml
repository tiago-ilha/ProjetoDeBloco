@model ProjetoDeBloco.Aplicacao.ViewModels.TurmaVM
@using ProjetoDeBloco.UI.Helpers

@{
    ViewBag.Title = "Cadastro de Turma";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.ValidationMessage("listaDeErros", new { @class = "text-danger" })

    <legend>Dados básicos</legend>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Identificador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Identificador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Identificador, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.IdModulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Modulos", "-- Selecione um módulo --")
                @Html.ValidationMessageFor(model => model.IdModulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdProfessor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Professores", "-- Selecione um módulo --")
                @Html.ValidationMessageFor(model => model.IdProfessor, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>    

    <legend>Adicionar Alunos</legend>
    @Html.Partial("~/Views/Shared/Parciais/_AdicionarAlunos.cshtml", Model)


    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-sm-1">
                <input type="submit" id="Cadastro" value="Salvar" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-2 col-md-2">
                @Html.ActionLink("Voltar a listagem de consulta", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

}

@section Scripts {

    @Html.PageScripts()
    @Scripts.Render("~/bundles/jqueryval")
}
