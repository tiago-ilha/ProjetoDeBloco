@model ProjetoDeBloco.Aplicacao.ViewModels.TurmaVM
@using ProjetoDeBloco.UI.Helpers
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dados básicos</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Identificador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Identificador, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdModulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.IdModulo, new SelectList(ViewBag.Modulo, "Id", "Nome", Model.IdModulo), "Selecione um módulo", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdProfessor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.IdProfessor, new SelectList(ViewBag.Professor, "Id", "Nome", Model.IdProfessor), "Selecione um professor", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <legend>Adicionar Alunos</legend>
    @Html.Partial("~/Views/Shared/Parciais/_AdicionarAlunos.cshtml", Model)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Voltar a listagem de consulta", "Index", null, new { @class = "btn btn-default" })
</div>


@section Scripts {

    @Html.PageScripts()
    @Scripts.Render("~/bundles/jqueryval")
}
