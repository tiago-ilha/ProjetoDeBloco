@model ProjetoDeBloco.Aplicacao.ViewModels.AvaliacaoVM
@using ProjetoDeBloco.UI.Helpers

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.ValidationMessage("listaDeErros", new { @class = "text-danger" })

    <legend>Dados básicos</legend>
    
    <div class="form-horizontal">
        <h4>Avaliação</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.dtInicio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dtInicio)
                @Html.ValidationMessageFor(model => model.dtInicio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dtFim, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dtFim)
                @Html.ValidationMessageFor(model => model.dtFim)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.objAvaliacao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.objAvaliacao)
                @Html.ValidationMessageFor(model => model.objAvaliacao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdTurma, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TurmaId", "-- Selecione uma Turma --")                                 
                @*@Html.ValidationMessageFor(model => model.IdTurma)*@
            </div>
        </div>

        <legend>Adicionar Perguntas</legend>
        @Html.Partial("~/Views/Shared/Parciais/_AdicionarQuestao.cshtml", Model)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



@section Scripts {

    @Html.PageScripts()
    @Scripts.Render("~/bundles/jqueryval")
}