@model IEnumerable<ProjetoDeBloco.Aplicacao.ViewModels.AlunoVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Aluno", "Cadastrar", null, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Matricula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            <a href="@Url.Action("Editar", "Aluno", new { id = item.Id })" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
            <a href="@Url.Action("Visualizar", "Aluno", new { id = item.Id })" title="Visualizar"><i class="glyphicon glyphicon-file"></i></a>
            <a href="@Url.Action("Remover", "Aluno", new { id = item.Id })" title="Remover"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
