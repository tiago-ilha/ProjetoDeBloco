@model IEnumerable<ProjetoDeBloco.Aplicacao.ViewModels.CursoVM>

@{
    ViewBag.Title = "Listagem de Cursos";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="active">@ViewBag.Title</li>
</ol>


<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Novo Curso", "Cadastro", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Código - Nome
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-lg-9">
                @Html.DisplayFor(modelItem => item.CodigoENome)
            </td>
            <td>
                <a href="@Url.Action("Editar", "Curso", new { id = item.Id })" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("Visualizar", "Curso", new { id = item.Id })" title="Visualizar"><i class="glyphicon glyphicon-file"></i></a>
                <a href="@Url.Action("Remover", "Curso", new { id = item.Id })" title="Remover"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }
</table>
